<body id="page-top">
    <!--/ Nav Star /-->
    <nav class="navbar navbar-b navbar-trans navbar-expand-md fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll" href="#page-top">ParsaPanahpoor</a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarDefault"
                    aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="navbar-collapse collapse justify-content-end" id="navbarDefault">
                <ul class="navbar-nav">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll" href="#">@User.Identity.Name</a>
                        </li>
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll" href="/register">وارد شوید </a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link js-scroll" href="#contact">تماس با من</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link js-scroll" href="#blog">وبلاگ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll" href="#work">کار ها</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll" href="#service">سرویس ها</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link js-scroll" href="#about"> درباره من</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll active" href="#home">خانه</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @await Component.InvokeAsync("BanerPictureComponent")

    @await Component.InvokeAsync("ResumeComponent")

    @await Component.InvokeAsync("ServicesComponent")

    @await Component.InvokeAsync("ProjectsComponent")

    @await Component.InvokeAsync("BlogsComponent")

    @await Component.InvokeAsync("ContactUsComponent")






    @RenderBody()



    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>
    <div id="preloader"></div>

    <!-- JavaScript Libraries -->
    <script src="/ParsaPanahpoor_Desing/lib/jquery/jquery.min.js"></script>
    <script src="/ParsaPanahpoor_Desing/lib/jquery/jquery-migrate.min.js"></script>
    <script src="/ParsaPanahpoor_Desing/lib/popper/popper.min.js"></script>
    <script src="/ParsaPanahpoor_Desing/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="/ParsaPanahpoor_Desing/lib/easing/easing.min.js"></script>
    <script src="/ParsaPanahpoor_Desing/lib/counterup/jquery.waypoints.min.js"></script>
    <script src="/ParsaPanahpoor_Desing/lib/counterup/jquery.counterup.js"></script>
    <script src="/ParsaPanahpoor_Desing/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/ParsaPanahpoor_Desing/lib/lightbox/js/lightbox.min.js"></script>
    <script src="/ParsaPanahpoor_Desing/lib/typed/typed.min.js"></script>
    <!-- Contact Form JavaScript File -->
