@model Models.Entities.ContactUs.ContactUs
@{
    ViewData["Title"] = "جزییات پیام ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper" style="min-height: 805px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>اطلاعات   پیام     </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/Admin">خانه</a></li>
                        <li class="breadcrumb-item active">اطلاعات  پیام      </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>



    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">اطلاعات پیام      </h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <div role="form" asp-action="Create" asp-controller="Users" asp-area="Admin">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1"> نام کامل        </label>
                                    <input type="text" value="@Model.UserName" readonly name="UserName" class="form-control" id="exampleInputEmail1">

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1"> شماره تلفن     </label>
                                    <input type="text" value="@Model.PhoneNumber" readonly name="PhoneNumber" class="form-control" id="exampleInputEmail1" placeholder="سمت کارمند  را وارد کنید">

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1"> ایمیل    </label>
                                    <textarea rows="2" value="@Model.Email" readonly name="Email" class="form-control" id="exampleInputEmail1" placeholder="توضیح درباره ی را وارد کنید"></textarea>

                                </div>
                               

                                <div class="form-group">
                                    <label for="exampleInputEmail1"> متن       </label>
                                    <textarea rows="5" type="text" readonly name="LongDescription" class="form-control" id="exampleInputEmail1" placeholder="لینک تصویر را وارد کنید">@Model.MessageContent</textarea>

                                </div>



                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <a href="/Admin/ContactUS/Index" class="btn btn-primary">بازگشت به عقب </a>
                            </div>
                        </div>
                    </div>


                </div>
                <!--/.col (left) -->
                <!-- right column -->
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>


</div>
