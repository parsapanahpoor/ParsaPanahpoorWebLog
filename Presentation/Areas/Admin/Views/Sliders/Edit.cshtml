@model Models.Entities.Sldier.Slider
@{ ViewData["Title"] = "ویرایش اسلایدر ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }


<div class="content-wrapper" style="min-height: 805px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1> ویرایش اسلایدر </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/Admin">خانه</a></li>
                        <li class="breadcrumb-item active">ویرایش اسلایدر    </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <form asp-action="Edit" asp-controller="Sliders" asp-area="Admin" method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="SliderId" />
        <input type="hidden" asp-for="SliderImageName" />



        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-7">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">اطلاعات اسلایدر    </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div role="form" asp-action="Create" asp-controller="Users" asp-area="Admin">
                                <div class="card-body">

                                    <div class="form-group">
                                        <label for="exampleInputEmail1"> متن      </label>
                                        <input type="text" asp-for="SliderText" class="form-control" id="exampleInputEmail1" placeholder="لینک تصویر    را وارد کنید">
                                        <span asp-validation-for="SliderText" class="text-danger"></span>

                                    </div>




                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer">

                                    @if (ViewData["Delete"] != null)
                                    {


                                <a class="btn btn-danger" href="/Admin/Sliders/Delete/@Model.SliderId">حذف</a>}
                                    else
                                    {
                                    <button type="submit" class="btn btn-info" >ویرایش </button>

                                    }

                                    <a asp-action="Index" asp-controller="Sliders" asp-area="Admin" class="btn btn-primary">بازگشت به عقب </a>
                                </div>


                            </div>
                        </div>


                    </div>
                    <!--/.col (left) -->
                    <!-- right column -->
                    <div class="col-md-5">
                        <!-- Horizontal Form -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">  تصویر  </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div class="form-horizontal">
                                <div class="card-body row">
                                    <img style="margin:auto; width:342px" id="imgAvatar" class="img-responsive rounded" src="~/Images/Slider/@Model.SliderImageName" alt="upload_img">
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" name="imgBlogUp" id="imgBlogUp">
                                            <label class="custom-file-label" for="exampleInputFile">انتخاب فایل</label>
                                        </div>

                                    </div>
                                </div>
                                <!-- /.card-body -->
                                <!-- /.card-footer -->
                            </div>
                        </div>
                        <!-- /.card -->
                        <!-- general form elements disabled -->
                        <!-- /.card -->



                    </div>

                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
    </form>


</div>

@section Scripts
{
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgBlogUp").change(function () {
            readURL(this);
        });</script>



}
